<theme>
    <formatVersion>3</formatVersion>

	

	<view name="system">


			
	</view>
	
	<feature supported="carousel">

		<view name="system">

		
		</view>

	</feature>

	<view name="basic, detailed, video">
	

	
		<rating name="md_rating">
			<filledPath>./../art/heart_filled.png</filledPath>
			<unfilledPath>./../art/heart_empty.png</unfilledPath>
		</rating>
		
		<textlist name="gamelist">
			<selectorColor>8b77ff</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>757575</primaryColor>
			<secondaryColor>8b77ff</secondaryColor>
		</textlist>
		

		

	
	
		
		<image name="player_box" extra="true">
			<color>8b77ff</color>		
		</image>

		<text name="publisher_label, developer_label, genre_label, rating_label, played_label" extra="true">
			<color>8b77ff</color>
		</text>

		<datetime name="md_releasedate">
			<color>8b77ff</color>
		</datetime>	

		
		
	

	</view>
	
</theme>